{
    "name": "recuperacion/despliegue-minesweeper",
    "description": "Generador de mapas de buscaminas - Proyecto de RecuperaciÃ³n Despliegue",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Juan Manuel",
            "email": "juanm@example.com"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpunit/php-code-coverage": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage --coverage-text",
        "test-coverage-xml": "phpunit --coverage-clover coverage.xml"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
} 